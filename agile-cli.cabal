  extra-lib-dirs:      /usr/local/opt/openssl/lib
  include-dirs:        /usr/local/opt/openssl/include
  default-language:    Haskell2010

executable agile-cli
  main-is:             AgileCli.hs
  build-depends:       base >=4.8
                     , agile-cli
  hs-source-dirs:      src-exec
  default-language:    Haskell2010
  ghc-options:         -O2

test-suite tests
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Tests.hs
  other-modules:       ConfigTests
                     , Git.BranchParserTests
                     , Github.IntegrationTests
                     , Github.RepositoryTests
                     , IntegrationTests
                     , ParserTests
                     , UtilTests
