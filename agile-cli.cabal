  hs-source-dirs:      src
  exposed-modules:     App.Backends
                     , App.Backends.Github
                     , App.Backends.Jira
                     , App.Backends.Jira.Parsers
                     , App.Backends.Stash
                     , App.Backends.Types
                     , App.CLI
                     , App.CLI.Options
                     , App.Config
                     , App.ConfigBuilder
                     , App.Git
                     , App.Git.Branch
                     , App.Git.Core
                     , App.Git.Remote
                     , App.Git.WorkingCopy
                     , App.InitialSetup
                     , App.Types
                     , App.Util
  build-depends:       base >=4.8
                     , jira-api <0.2
                     , authenticate-oauth >=1.5 && <2.0
                     , HsOpenSSL >=0.11.1.1 && <1.0
                     , crypto-pubkey-types >=0.4.3 && <1.0
                     , bytestring >=0.10.6 && <1.0
                     , curl >=1.3.8 && <2.0
                     , base64-bytestring >=1.0.0.1 && <2.0
                     , RSA >=2.2.0 && < 3.0
                     , http-client >=0.4.31 && <1.0
                     , http-client-tls >=0.2.4 && <1.0
                     , http-types >=0.9.1 && <1.0
                     , string-conversions >=0.4 && < 1.0
                     , transformers >=0.4.2 && <1.0
                     , aeson >=0.11.2.0
                     , lens-aeson >=1.0.0.5 && <2.0
                     , lens >=4.13 && <5.0
                     , directory >= 1.2.2 && <2.0
                     , mtl >=2.2.1 && <3.0
                     , either >=4.4.1.1
                     , exceptions >=0.8.3 && <1.0
                     , process >=1.2.3 && <2.0
                     , aeson-pretty >=0.7.2 && <1.0
                     , unix >=2.7.1 && <3.0
                     , filepath >=1.4 && <2.0
                     , git >=0.3.0
                     , shelly >=1.6.8 && <2.0
                     , temporary >=1.2.0.4 && <2.0
                     , text >=1.2.2.1 && <2.0
                     , regexpr >=0.5.4 && <1.0
                     , parsec >=3.1.11 && <4.0
                     , containers >=0.5.6 && <1.0
                     , optparse-applicative >=0.12.1.0 && <1.0
                     , async >=2.1.0 && <3.0
                     , semigroups >=0.0.7 && <1.0
                     , unordered-containers >=0.2.7.1 && <1.0
                     , split >=0.2.3.1 && < 1.0
                     , github >= 0.14.0 && <1.0
