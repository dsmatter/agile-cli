                     , directory >= 1.2.2 && <2.0
                     , filepath >=1.4 && <2.0
                     , github >= 0.14.0
                     , jira-api
                     , lens >=4.13 && <5.0
                     , parsec >=3.1.11 && <4.0
                     , semigroups >=0.0.7 && <1.0
                     , shelly >=1.6.8 && <2.0
                     , temporary >=1.2.0.4 && <2.0
